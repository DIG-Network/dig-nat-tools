{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["src", "examples", "tests"],
  "exclude": ["node_modules", "dist"]
}
